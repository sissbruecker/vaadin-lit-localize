{
  "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/config.schema.json",
  "sourceLocale": "en",
  "targetLocales": ["de-DE"],
  "inputFiles": [
    "./demo.js"
  ],
  "output": {
    "mode": "runtime",
    "outputDir": "./generated/locales",
    "localeCodesModule": "./demo/generated/locales.js"
  },
  "interchange": {
    "format": "xliff",
    "xliffDir": "./xliff/"
  }
}